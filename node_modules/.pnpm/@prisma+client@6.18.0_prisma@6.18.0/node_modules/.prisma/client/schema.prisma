generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  username  String? @unique
  email     String  @unique
  password  String
  firstName String?
  lastName  String?
  role      String  @default("user") // user (client) or admin

  // Auth fields
  googleId               String?   @unique
  isVerified             Boolean   @default(false)
  tempPassword           String?
  tempPasswordExpiry     DateTime?
  requiresPasswordChange Boolean   @default(false)

  // Client/Membership fields (Now part of User)
  phone            String?
  membershipType   String? // Gold, Silver, Bronze
  status           String?   @default("pending") // active, pending, expired
  joinDate         DateTime  @default(now())
  expiryDate       DateTime?
  address          String?   @db.Text
  emergencyContact String?

  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  notes         Note[]
  payments      Payment[]
  checkIns      CheckIn[]
  notifications Notification[]
}

model Note {
  id        Int      @id @default(autoincrement())
  title     String
  content   String   @db.Text
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Payment {
  id            Int      @id @default(autoincrement())
  userId        Int
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  planName      String // Gold, Silver, Bronze
  amount        Float
  paymentMethod String // cash, gcash
  status        String   @default("pending") // pending, approved, rejected
  receiptUrl    String? // For GCash screenshots
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model CheckIn {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  checkInTime DateTime @default(now())
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  message   String
  type      String   @default("info") // info, warning, success, error
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}
